{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "checkJs": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "ignoreDeprecations": "6.0"
  },
  "exclude": [
    "node_modules",
    "**/*.ts",
    "**/*.d.ts",
    "dist",
    "build"
  ],
  "include": [
    "**/*.js",
    "*.js"
  ]
}